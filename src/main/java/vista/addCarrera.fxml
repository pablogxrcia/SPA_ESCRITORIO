<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="526.0" prefWidth="605.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="controlador.ControladorAddCarrera">
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>

   <!-- Campo Nombre -->
   <HBox spacing="10">
      <Label text="Nombre:" />
      <TextField fx:id="nameField" />
   </HBox>

   <!-- Campo Deporte -->
   <HBox spacing="10">
      <Label text="Deporte:" />
      <ComboBox fx:id="sportComboBox">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="running" />
               <String fx:value="trailRunning" />
               <String fx:value="cycling" />
            </FXCollections>
         </items>
      </ComboBox>
   </HBox>

   <!-- Campo Fecha -->
   <HBox spacing="10">
      <Label text="Fecha:" />
      <DatePicker fx:id="datePicker" />
   </HBox>

   <!-- Campo Ubicación -->
   <HBox spacing="10">
      <Label text="Ubicación:" />
      <TextField fx:id="locationField" />
   </HBox>

   <!-- Campo Distancia -->
   <HBox spacing="10">
      <Label text="Distancia (km):" />
      <TextField fx:id="distanceField" />
   </HBox>

   <!-- Campo Máx Participantes -->
   <HBox spacing="10">
      <Label text="Máx Participantes:" />
      <TextField fx:id="maxParticipantsField" />
   </HBox>

   <!-- Campo Desnivel -->
   <HBox spacing="10">
      <Label text="Desnivel (m):" />
      <TextField fx:id="unevennessField" />
   </HBox>

   <!-- Campo Recorrido -->
   <HBox spacing="10">
      <Label text="Recorrido:" />
      <TextArea fx:id="tourField" />
   </HBox>

   <!-- Campo Tiempo de Clasificación -->
   <HBox spacing="10">
      <Label text="Tiempo de Clasificación (HH:mm:ss):" />
      <TextField fx:id="qualifyingTimeField" />
   </HBox>

   <!-- Botones -->
   <HBox spacing="10">
      <Button fx:id="createRaceButton" onAction="#handleCreateRace" text="Añadir" />
      <Button onAction="#handleCancel" text="Cancelar" />
   </HBox>
</VBox>
